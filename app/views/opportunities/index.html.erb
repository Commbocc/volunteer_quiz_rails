<p id="notice"><%= notice %></p>

<header class="page-header">
	<h1>Opportunities</h1>
</header>

<table class="table table-striped table-condensed">
	<thead>
		<tr>
			<th>Name</th>
			<th colspan="2"></th>
		</tr>
	</thead>

	<tbody>
		<% @opportunities.each do |opportunity| %>
		<tr>
			<td><%= link_to opportunity.name, opportunity %></td>
			<td><%= link_to 'Edit', edit_opportunity_path(opportunity) %></td>
			<td><%= link_to 'Destroy', opportunity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<br>

<%= link_to 'New Opportunity', new_opportunity_path %>
